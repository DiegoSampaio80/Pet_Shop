<!DOCTYPE html>
<html lang="pt-Br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.cdnfonts.com/css/pet-shop" rel="stylesheet">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&family=Amita&family=Comic+Neue:ital@0;1&family=Cookie&family=Handlee&family=Just+Another+Hand&family=Patrick+Hand&family=Petit+Formal+Script&family=Sriracha&display=swap"
        rel="stylesheet">
    <!-- Fonts -->

    <!-- Icons -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <!-- Icons -->

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/bootstrap.bundle.min.js"></script>
    <title>Editar Cadastros de Tutor</title>


<body>
    <header class=" sticky-top shadow">
        <%- include('navbar') %>
    </header>
        <div class="container border rounded-2 my-4 p-4">
            <% if (error_msg != '') { %>
                <div class="alert alert-danger"><%= error_msg %></div>
            <% } %>
            <% if (success_msg != '') { %>
                <div class="alert alert-success"><%= success_msg %></div>
            <% } %>
            <h2 class="mb-4">Editar Tutor</h2>
            <form action="" method="post">
                <div class="col-12 d-flex">
                    <div class="col-8 mb-3 p-2">
                        <label for="nome_tutor" class="form-label">Nome Tutor</label>
                        <input type="text" class="form-control" value="<%= editarTutor.nome_tutor %>" name="nome_tutor"
                            id="nome_tutor" aria-describedby="">
                    </div>
                    <div class="col-2 mb-3 p-2">
                        <label for="contato_tutor" class="form-label">Contato 1</label>
                        <input type="text" name="contato_tutor" class="form-control text-center"
                            value="<%= editarTutor.contato_tutor %>" id="contato_tutor" placeholder="(00) 9-0000-0000">
                    </div>
                    <div class="col-2 mb-3 p-2">
                        <label for="contato_tutor_2" class="form-label text-center">Contato 2</label>
                        <input type="text" name="contato_tutor_2" class="form-control" id="contato_tutor_2"
                            placeholder="(00) 9-0000-0000">
                    </div>
                </div>
                <div class="col-12 d-flex">
                    <div class="col-4 mb-3 p-2">
                        <label for="email_tutor" class="form-label">E-mail</label>
                        <input type="email" name="email_tutor" value="<%= editarTutor.email_tutor %>"
                            class="form-control" id="email_tutor">
                    </div>
                    <div class="col-4 mb-3 p-2">
                        <label for="documento_tutor" class="form-label">Documento</label>
                        <input type="text" name="documento_tutor" value="<%= editarTutor.documento_tutor %>"
                            class="form-control" id="documento_tutor">
                    </div>
                    <div class="col-2 mb-3 p-2">
                        <label for="tipo_doc_tutor" class="form-label">Tipo do Documento</label>
                        <select class="form-select" name="tipo_doc_tutor" value="<%= editarTutor.tipo_doc_tutor %>"
                            id="tipo_doc_tutor" aria-label="Default select example">
                            <option>Selecione</option>
                            <option value="<%= editarTutor.tipo_doc_tutor %>" selected>
                                <%= editarTutor.tipo_doc_tutor %>
                            </option>
                            <option value="CPF">CPF</option>
                            <option value="RG">RG</option>
                            <option value="CNPJ">CNPJ</option>
                        </select>
                    </div>
                    <div class="col-2 mb-3 p-2">
                        <label for="status" class="form-label">Situação</label>
                        <select class="form-select" name="status" id="status" aria-label="Default select example">
                            <option>Selecione</option>
                            <option value="<%= editarTutor.status %>" selected>
                                <%= editarTutor.status %>
                            </option>
                            <option value="Ativo">Ativo</option>
                            <option value="Inativo">Inativo</option>
                            <option value="Inadimplente">Inadimplente</option>
                        </select>
                    </div>
                </div>
                <div class="col-12 d-flex">
                    <div class="col-8 mb-3 p-2">
                        <label for="endereco_tutor" class="form-label">Endereco</label>
                        <input type="text" name="endereco_tutor" value="<%= editarTutor.endereco_tutor %>"
                            class="form-control" id="endereco_tutor">
                    </div>
                    <div class="col-1 mb-3 p-2">
                        <label for="numero" class="form-label">nº</label>
                        <input type="text" name="numero" value="<%= editarTutor.numero %>"
                            class="form-control text-center" id="numero">
                    </div>

                    <div class="col-3 mb-3 p-2">
                        <label for="complemento" class="form-label">Complemento</label>
                        <input type="text" name="complemento" value="<%= editarTutor.complemento %>"
                            class="form-control" id="complemento">
                    </div>
                </div>
                <div class="col-12 d-flex">
                    <div class="col-4 mb-3 p-2">
                        <label for="bairro" class="form-label">Bairro</label>
                        <input type="text" name="bairro" value="<%= editarTutor.bairro %>" class="form-control"
                            id="bairro">
                    </div>
                    <div class="col-4 mb-3 p-2">
                        <label for="cidade" class="form-label">Cidade</label>
                        <input type="text" name="cidade" value="<%= editarTutor.cidade %>" class="form-control"
                            id="cidade">
                    </div>
                    <div class="col-2 mb-3 p-2">
                        <label for="estado" class="form-label">Estado</label>
                        <input type="text" name="estado" value="<%= editarTutor.estado %>" class="form-control"
                            id="estado">
                    </div>
                    <div class="col-2 mb-3 p-2">
                        <label for="cep" class="form-label">CEP</label>
                        <input type="text" name="cep" value="<%= editarTutor.cep %>" autofocus onblur="buscarEndereco()" class="form-control text-center"
                            id="cep" placeholder="00000-00">
                    </div>
                </div>
                <div class="mb-3 p-2">
                    <button type="submit" class="btn btn-success text-uppercase">Salvar</button>
                </div>
            </form>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
        <script>
            function buscarEndereco(cep) {
                fetch(`https://viacep.com.br/ws/${cep}/json/`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.erro) {
                            console.log('CEP inválido');
                        } else {
                            document.getElementById('endereco_tutor').value = data.logradouro;
                            document.getElementById('bairro').value = data.bairro;
                            document.getElementById('cidade').value = data.localidade;
                            document.getElementById('cep').value = data.cep;
                            document.getElementById('complemento').value = data.complemento;
                            document.getElementById('estado').value = data.uf;
                        }
                    })
                    .catch(error => {
                        console.log('Erro ao buscar endereço:', error);
                    });
            }

            const inputCep = document.getElementById('cep');
            inputCep.addEventListener('blur', () => {
                const cep = inputCep.value.replace('-', '');
                buscarEndereco(cep);
            });
        </script>
</body>

</html>