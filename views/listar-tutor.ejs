<!DOCTYPE html>
<html lang="pt-Br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.cdnfonts.com/css/pet-shop" rel="stylesheet">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&family=Amita&family=Comic+Neue:ital@0;1&family=Cookie&family=Handlee&family=Just+Another+Hand&family=Patrick+Hand&family=Petit+Formal+Script&family=Sriracha&display=swap"
        rel="stylesheet">
    <!-- Fonts -->

    <!-- Icons -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
       
    <!-- Icons -->

    <!-- Data Table -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.2/css/dataTables.bootstrap5.min.css">   
    <!-- Data Table -->

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/bootstrap.bundle.min.js"></script>

    <title>Lista de Tutores</title>

<body>
    <header class=" sticky-top shadow">
        <%- include('navbar-adm') %>
    </header>
    <section class="container my-5 border rounded-2 p-4 pb-2 overflow-auto" style="height: 470px;">
        <% if (error_msg != '') { %>
            <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>
        <% if (success_msg != '') { %>
            <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <table id="tabela-veterinario" class="table table-striped table-hover table-responsive">
            <h2 class="mb-4">Lista de Tutores</h2>
            <thead class="text-white" style="background-color: var(--bs-gray-600);">
                <tr>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Código</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Nome</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">E-mail</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Contato 1</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Contato 2</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Endereço</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Número</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Complemento</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Bairro</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Cidade</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Estado</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">CEP</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Tipo de Documento</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Nº Documento</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Status</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Editar</th>
                    <th class="text-center align-middle text-uppercase p-3 text-nowrap" scope="col">Excluir</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < resultados.length; i++) { %>
                    <tr>
                        <th class="text-center align-middle col-auto " scope="row">
                            <%= resultados[i].id_tutor %>
                        </th>
                        <td class="text-start align-middle col-auto text-nowrap">
                            <%= resultados[i].nome_tutor %>
                        </td>
                        <td class="text-start align-middle col-auto text-nowrap">
                            <%= resultados[i].email_tutor %>
                        </td>
                        <td class="text-center align-middle col-auto text-nowrap">
                            <%= resultados[i].contato_tutor %>
                        </td>
                        <td class="text-center align-middle col-auto text-nowrap">
                            <%= resultados[i].contato_tutor_2 %>
                        </td>
                        <td class="text-start align-middle col-auto text-nowrap">
                            <%= resultados[i].endereco_tutor %>
                        </td>
                        <td class="text-center align-middle col-auto text-nowrap">
                            <%= resultados[i].numero %>
                        </td>
                        <td class="text-start align-middle col-auto text-nowrap">
                            <%= resultados[i].complemento %>
                        </td>
                        <td class="text-start align-middle col-auto text-nowrap">
                            <%= resultados[i].bairro %>
                        </td>
                        <td class="text-start align-middle col-auto text-nowrap">
                            <%= resultados[i].cidade %>
                        </td>
                        <td class="text-start align-middle col-auto text-nowrap">
                            <%= resultados[i].estado %>
                        </td>
                        <td class="text-center align-middle col-auto text-nowrap">
                            <%= resultados[i].cep %>
                        </td>
                        <td class="text-center align-middle col-auto">
                            <%= resultados[i].tipo_doc_tutor %>
                        </td>
                        <td class="text-end align-middle col-auto">
                            <%= resultados[i].documento_tutor %>
                        </td>
                        <td class="text-center align-middle col-auto">
                            <%= resultados[i].status %>
                        </td>
                        <td class="text-center col-auto align-middle">
                            <a href="/atualizar-tutor/<%= resultados[i].id_tutor %>">
                               <button class="btn btn-info text-white text-uppercase" style="width: 100px;">EDITAR</button>
                            </a>
                        </td>
                        <td class="text-center col-auto align-middle">
                            <form action="/listar-tutor/<%= resultados[i].id_tutor %>" method="POST">
                              <input type="hidden" name="_method" value="DELETE">
                              <button class="btn btn-warning text-white text-uppercase" style="width: 100px;">EXCLUIR</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
    </script>
    <!-- Data Table -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.2/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#tabela-veterinario').DataTable({
                "order": [[1, 'asc']],
                "language": {
                    "lengthMenu":     "Listando até _MENU_ resultados",
                    "info":           "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "search":         "Pesquisa:"
                }
            });
        });
    </script>    
    <!-- Data Table -->    
</body>

</html>