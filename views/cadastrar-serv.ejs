<!DOCTYPE html>
<html lang="pt-Br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.cdnfonts.com/css/pet-shop" rel="stylesheet">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&family=Amita&family=Comic+Neue:ital@0;1&family=Cookie&family=Handlee&family=Just+Another+Hand&family=Patrick+Hand&family=Petit+Formal+Script&family=Sriracha&display=swap"
        rel="stylesheet">
    <!-- Fonts -->

    <!-- Icons -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <!-- Icons -->

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/bootstrap.bundle.min.js"></script>
    <title>Cadastro de Serviço</title>


<body>
    <header class=" sticky-top shadow">
        <%- include('navbar-adm') %>
    </header>
        <div class="container my-4 p-4 border rounded-2">
            <% if (error_msg != '') { %>
                <div class="alert alert-danger"><%= error_msg %></div>
            <% } %>
            <% if (success_msg != '') { %>
                <div class="alert alert-success"><%= success_msg %></div>
            <% } %>
            <h2 class="mb-4">Cadastro de Serviço</h2>
            <form action="/cadastrar-serv" method="post">
                <div class="col-12 d-flex">
                    <div class="col-8 mb-3 px-2">
                        <label for="serv_veterinario" class="form-label">Descrição do Serviço</label>
                        <input type="text" class="form-control" name="serv_veterinario" id="serv_veterinario"
                            aria-describedby="emailHelp">
                    </div>
                    <div class="col-4 mb-3 px-2">
                        <label for="unid_medida" class="form-label">Und. de Medida</label>
                        <select class="form-select" name="unid_medida" id="unid_medida" aria-label="Default select example">
                            <option selected>Selecione</option>
                            <option value="und">Und</option>
                            <option value="procedimento">Procedimento</option>
                            <option value="cx">Cx</option>
                            <option value="diaria">Diária</option>
                            <option value="km">Km</option>
                        </select>
                    </div>
                </div>
                <div class="col-12 d-flex">                
                    <div class="col-6 mb-3 px-2">
                        <label for="serv_categoria" class="form-label">Categoria</label>
                        <select class="form-select" name="serv_categoria" id="serv_categoria" aria-label="Default select example">
                            <option selected>Selecione</option>
                            <% for (const categoria of categorias) { %>
                              <option value="<%= categoria.id_categoria_serv %>"><%= categoria.nome_categoria_serv %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-6 mb-3 px-2">
                        <label for="valor" class="form-label">Valor</label>
                        <input type="text" name="valor" class="form-control" id="valor" pattern="^[0-9.,]+$" title="Por favor, insira apenas números e vírgula.">
                    </div>
                </div>
                <div class="col-12 px-2">
                    <button type="submit" class="btn btn-success text-uppercase">Cadastrar</button>
                </div>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
</body>

</html>